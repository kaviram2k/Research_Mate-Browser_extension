{
  "manifest_version": 3,
  "name": "ResearchMate",
  "short_name": "ResearchMate",
  "version": "1.0.0",
  "author": "Research Tools",
  "description": "Your smart companion for academic research. Easily access and manage research papers from trusted academic sources.",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "64": "icons/icon-64.png",
    "96": "icons/icon-96.png",
    "128": "icons/icon-128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "96": "icons/icon-96.png"
    },
    "default_title": "Research Paper Downloader Pro"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'",
    "sandbox": "sandbox allow-scripts allow-forms allow-popups allow-modals; script-src 'self' 'unsafe-inline'; child-src 'self'"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs",
    "contextMenus",
    "alarms",
    "downloads"
  ],
  "host_permissions": [
    "https://ieeexplore.ieee.org/*",
    "https://arxiv.org/*",
    "https://www.sciencedirect.com/*",
    "https://link.springer.com/*",
    "https://www.scopus.com/*",
    "https://scholar.google.com/*",
    "https://annas-archive.li/*",
    "https://sci-hub.se/*",
    "https://sci-hub.st/*",
    "https://doi.org/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://ieeexplore.ieee.org/*",
        "https://arxiv.org/*",
        "https://www.sciencedirect.com/*",
        "https://link.springer.com/*",
        "https://scholar.google.com/*"
      ],
      "js": [
        "content-script.js"
      ],
      "css": [
        "content.css"
      ],
      "run_at": "document_end"
    }
  ],
  "options_page": "options.html",
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
}